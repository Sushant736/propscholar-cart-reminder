# Database Configuration (if using direct DB access)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=propscholar
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# OR API Configuration (if using API to fetch cart data)
API_URL=https://api.propscholar.com
API_KEY=your_api_key_here

# Email Configuration (Nodemailer SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@propscholar.com

# OR Email Service (SendGrid/Mailgun/Resend)
# SENDGRID_API_KEY=your_sendgrid_api_key
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=mg.propscholar.com

# Cron Schedule (default: every hour)
CRON_SCHEDULE=0 * * * *

# Cart Abandonment Settings
ABANDONED_CART_THRESHOLD_HOURS=24

# Environment
NODE_ENV=development
